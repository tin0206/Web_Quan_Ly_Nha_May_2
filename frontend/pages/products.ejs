<!DOCTYPE html>
<html lang="vi">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/main_style.css" />
    <script type="module" src="/js/production_products.js" defer></script>
    <title>Quản Lý Sản Phẩm - Factory Management</title>
  </head>
  <body>
    <!-- Top Navigation Bar -->
    <div class="topBar">
      <a href="/" class="nav-left">
        <i class="fa-solid fa-home"></i>
        <span>DashBoard</span>
      </a>
      <div class="nav-breadcrumb">
        <a href="/products" style="text-decoration: none; color: inherit"
          >Sản Phẩm</a
        >
      </div>
    </div>

    <!-- Main Container -->
    <div class="main-container-product">
      <!-- Header Section -->
      <div class="header-section">
        <div class="header-top">
          <a class="back-btn" href="/">
            <i class="fa-solid fa-arrow-left"></i>
          </a>
          <div class="header-title">
            <div class="header-top-left">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="#6259ee"
              >
                <path
                  d="M11.132 2.504l-4 7a1 1 0 0 0 .868 1.496h8a1 1 0 0 0 .868 -1.496l-4 -7a1 1 0 0 0 -1.736 0z"
                />
                <path
                  d="M17 13a4 4 0 1 1 -3.995 4.2l-.005 -.2l.005 -.2a4 4 0 0 1 3.995 -3.8z"
                />
                <path
                  d="M9 13h-4a2 2 0 0 0 -2 2v4a2 2 0 0 0 2 2h4a2 2 0 0 0 2 -2v-4a2 2 0 0 0 -2 -2z"
                />
              </svg>
              <div class="header-text">
                <h1>Danh Mục Sản Phẩm</h1>
                <p>Quản lý dữ liệu chính sản phẩm và quy đổi đơn vị</p>
              </div>
            </div>
            <div class="badge-cs1"><%= process.env.LINE %></div>
          </div>
        </div>

        <!-- Stats Grid -->
        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-header">
              <span>Tổng Sản Phẩm</span>
              <div class="stat-icon" id="total-icon">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="#2a65b9"
                >
                  <path
                    d="M11.132 2.504l-4 7a1 1 0 0 0 .868 1.496h8a1 1 0 0 0 .868 -1.496l-4 -7a1 1 0 0 0 -1.736 0z"
                  />
                  <path
                    d="M17 13a4 4 0 1 1 -3.995 4.2l-.005 -.2l.005 -.2a4 4 0 0 1 3.995 -3.8z"
                  />
                  <path
                    d="M9 13h-4a2 2 0 0 0 -2 2v4a2 2 0 0 0 2 2h4a2 2 0 0 0 2 -2v-4a2 2 0 0 0 -2 -2z"
                  />
                </svg>
              </div>
            </div>
            <div class="stat-number" id="totalProducts">2</div>
          </div>

          <div class="stat-card">
            <div class="stat-header">
              <span>Sản Phẩm Hoạt động</span>
              <div class="stat-icon" id="active-icon">
                <i class="fa-solid fa-circle-check" style="color: #47b54d"></i>
              </div>
            </div>
            <div class="stat-number" id="activeProducts">2</div>
          </div>

          <div class="stat-card">
            <div class="stat-header">
              <span>Type / Category</span>
              <div class="stat-icon" id="type-category-icon">
                <i class="fa-solid fa-box-archive" style="color: #1c96ff"></i>
              </div>
            </div>
            <div class="stat-number" id="totalTypes&Categories">2 / 3</div>
          </div>

          <div class="stat-card">
            <div class="stat-header">
              <span>Group</span>
              <div class="stat-icon" id="group-icon">
                <i class="fa-solid fa-layer-group" style="color: #1c96ff"></i>
              </div>
            </div>
            <div class="stat-number" id="totalGroups">0</div>
          </div>
        </div>
      </div>

      <!-- Search and Filter Section -->
      <div class="search-section-product">
        <div class="search-bar">
          <i class="fa-solid fa-search"></i>
          <input
            type="text"
            id="searchInput"
            placeholder="Tìm theo mã, tên, nhóm..."
          />
        </div>
        <div class="view-controls-product">
          <button class="view-btn-product active" id="tableViewBtn">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="#6259ee"
            >
              <rect x="3" y="4" width="18" height="3" rx="1.5" />
              <rect x="3" y="10.5" width="18" height="3" rx="1.5" />
              <rect x="3" y="17" width="18" height="3" rx="1.5" />
            </svg>
          </button>
          <button class="view-btn-product" id="gridViewBtn">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="#6259ee"
            >
              <rect x="3" y="4" width="7" height="7" rx="2" />
              <rect x="14" y="4" width="7" height="7" rx="2" />
              <rect x="14" y="13" width="7" height="7" rx="2" />
              <rect x="3" y="13" width="7" height="7" rx="2" />
            </svg>
          </button>
          <div
            class="custom-multiselect"
            style="position: relative; min-width: 220px"
          >
            <div
              id="statusInput"
              class="multiselect-input"
              style="
                display: flex;
                align-items: center;
                justify-content: space-between;
                gap: 8px;
                border: 1px solid #ddd;
                border-radius: 8px;
                padding: 8px 12px;
                cursor: pointer;
              "
            >
              <span id="statusSelectedText" style="color: #999"
                >Select statuses...</span
              >
              <i class="fa-solid fa-chevron-down" style="color: #666"></i>
            </div>
            <div
              id="statusDropdown"
              class="multiselect-dropdown"
              style="
                position: absolute;
                top: 42px;
                left: 0;
                right: 0;
                background: #fff;
                border: 1px solid #eee;
                box-shadow: 0 4px 12px #0001;
                border-radius: 8px;
                padding: 8px;
                display: none;
                z-index: 1000;
              "
            >
              <label
                style="
                  display: flex;
                  align-items: center;
                  gap: 8px;
                  padding: 6px 8px;
                  border-bottom: 1px dashed #eee;
                "
              >
                <input type="checkbox" id="statusSelectAll" />
                <strong>Select all</strong>
              </label>
              <div
                id="statusOptions"
                style="
                  display: flex;
                  flex-direction: column;
                  gap: 4px;
                  padding-top: 4px;
                "
              ></div>
            </div>
          </div>

          <div
            class="custom-multiselect"
            style="position: relative; min-width: 220px"
          >
            <div
              id="typeInput"
              class="multiselect-input"
              style="
                display: flex;
                align-items: center;
                justify-content: space-between;
                gap: 8px;
                border: 1px solid #ddd;
                border-radius: 8px;
                padding: 8px 12px;
                cursor: pointer;
              "
            >
              <span id="typeSelectedText" style="color: #999"
                >Select types...</span
              >
              <i class="fa-solid fa-chevron-down" style="color: #666"></i>
            </div>
            <div
              id="typeDropdown"
              class="multiselect-dropdown"
              style="
                position: absolute;
                top: 42px;
                left: 0;
                right: 0;
                background: #fff;
                border: 1px solid #eee;
                box-shadow: 0 4px 12px #0001;
                border-radius: 8px;
                padding: 8px;
                display: none;
                z-index: 1000;
              "
            >
              <label
                style="
                  display: flex;
                  align-items: center;
                  gap: 8px;
                  padding: 6px 8px;
                  border-bottom: 1px dashed #eee;
                "
              >
                <input type="checkbox" id="typeSelectAll" />
                <strong>Select all</strong>
              </label>
              <div
                id="typeOptions"
                style="
                  display: flex;
                  flex-direction: column;
                  gap: 4px;
                  padding-top: 4px;
                "
              ></div>
            </div>
          </div>
          <button class="refresh-btn">
            <i class="fa-solid fa-rotate-right"></i>
            Làm mới
          </button>
        </div>
      </div>

      <!-- Grid View -->
      <div class="grid-view" id="gridView">
        <!-- JS sẽ render grid-view ở đây -->
      </div>

      <!-- Table View -->
      <div class="table-section" id="tableView">
        <table class="data-table">
          <thead>
            <tr>
              <th>Mã SP</th>
              <th>Tên Sản Phẩm</th>
              <th style="text-align: center">Loại</th>
              <th style="text-align: center">Nhóm</th>
              <th style="text-align: center">ĐV Cơ Sở</th>
              <th style="text-align: center">Trạng Thái</th>
              <th>Cập Nhật</th>
              <th style="text-align: center">Thao Tác</th>
            </tr>
          </thead>
          <tbody id="productTableBody">
            <!-- JS sẽ render table-view ở đây -->
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <div class="pagination-section">
        <div class="pagination-controls">
          <button id="prevPageBtn" class="pagination-btn" onclick="prevPage()">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </button>
          <span id="pageInfo" class="page-info">Trang 1 / 1</span>
          <button id="nextPageBtn" class="pagination-btn" onclick="nextPage()">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </button>
        </div>
      </div>
    </div>
    <!-- Product Detail Modal -->
    <div
      id="productDetailModal"
      style="
        display: none;
        position: fixed;
        z-index: 9999;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.25);
        align-items: center;
        justify-content: center;
      "
    >
      <div
        style="
          background: #fff;
          border-radius: 12px;
          max-width: 600px;
          width: 90vw;
          margin: 40px auto;
          padding: 32px 24px;
          box-shadow: 0 2px 24px #0002;
          position: relative;
        "
        id="productDetailBody"
      >
        <!-- JS will render product details here -->
      </div>
    </div>
  </body>
</html>
